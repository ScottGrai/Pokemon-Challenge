{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2016", "es2017"],
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "*/node_modules",
    "**/node_modules",
    "tests"
  ],
  "lib": [
    "dom",
    "es2015",
    "es5",
    "es6",
    "es2016.array.include",
    "es2017"
  ]
}
